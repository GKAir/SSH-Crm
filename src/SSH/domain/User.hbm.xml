<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="SSH.domain.User" table="user" schema="users">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="username">
            <column name="username" sql-type="varchar(20)" length="20" />
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(20)" length="20" />
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(20)" length="20" />
        </property>
        <property name="sex">
            <column name="sex" sql-type="varchar(10)" length="10" />
        </property>
        <property name="birthday">
            <column name="birthday" sql-type="varchar(20)" length="20" />
        </property>
    </class>
</hibernate-mapping>